    <style name="Theme.BRSMovilidadERP" parent="Base.Theme.BRSMovilidadERP">
    </style>

    <style name="Theme.BRSMovilidadERP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:itemTextAppearance">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Theme.BRSMovilidadERP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BRSMovilidadERP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="Theme.BRSMovilidadERP.NoActionBarPrueba" parent="Theme.BRSMovilidadERPprueba">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Estilo base de la aplicación PRUEBA -->
    <style name="Theme.BRSMovilidadERPprueba" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/colorAdvantysApp1</item>
        <item name="colorPrimaryVariant">@color/colorAdvantysApp1</item>
        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/colorAdvantysApp3</item>
        <item name="colorSecondaryVariant">@color/colorAdvantysApp2</item>
        <!-- Color de fondo de la barra de navegación -->
        <item name="android:navigationBarColor">@color/colorAdvantysApp1</item>
        <!-- Color de fondo de la barra de estado -->
        <item name="android:statusBarColor">@color/colorAdvantysApp1</item>
        <!-- Color de acento -->
        <item name="colorAccent">@color/colorAdvantysApp3</item>
    </style>
</resources>