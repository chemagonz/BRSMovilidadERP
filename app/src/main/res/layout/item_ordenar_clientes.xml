<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:theme="@style/Theme.BRSMovilidadERPprueba"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/nombreOrdenarCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="6dp"
                android:text="TextView"
                android:textColor="@color/colorAdvantysApp7"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/codigoOrdenarCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nombreOrdenarCliente"
                android:layout_marginStart="7dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:layout_marginBottom="5sp"
                android:textColor="@color/black"
                android:textSize="14sp"
                />
        </RelativeLayout>

</androidx.cardview.widget.CardView>
