<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0"
            android:paddingLeft="6dp"
            android:paddingRight="5dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="113dp"
                android:layout_height="match_parent"
                android:layout_marginStart="70sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCodigoCliente"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_marginBottom="10sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="Código"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000"
                    android:textSize="15sp">

                </TextView>

                <EditText
                    android:id="@+id/edCodigoArticulo"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/plaintextdesign"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textSize="14dp">

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtFCarticulos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70sp"
                    android:layout_marginBottom="10sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:paddingLeft="30dp"
                    android:text="F.C."
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textSize="15sp">

                </TextView>

                <EditText
                    android:id="@+id/edFCarticulo"
                    android:layout_width="66dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="-5sp"
                    android:layout_marginRight="12sp"
                    android:background="@drawable/plaintextdesign"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="#000000"
                android:layout_marginBottom="10sp"
                android:paddingStart="85sp">

            </TextView>

            <EditText
                android:id="@+id/edNombreArticulo"
                android:layout_width="250dp"
                android:layout_height="33dp"
                android:layout_marginStart="75sp"
                android:textAlignment="center"
                android:textSize="14dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:background="@drawable/plaintextdesign">

            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginTop="10sp"
                android:paddingStart="85sp"
                android:text="Nombre corto"
                android:textColor="#000000">

            </TextView>

            <EditText
                android:id="@+id/edNombreCortoArticulo"
                android:layout_width="250dp"
                android:layout_height="33dp"
                android:layout_marginStart="75sp"
                android:textAlignment="center"
                android:textSize="14dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:background="@drawable/plaintextdesign">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/separador2"
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:layout_weight="0"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="10sp"
            android:background="@color/teal"
            android:orientation="vertical" >

        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80sp"
                    android:layout_marginBottom="10sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="Tipo IVA"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000"
                    android:textSize="15sp">

                </TextView>

                <EditText
                    android:id="@+id/edTipoIVA"
                    android:layout_width="104dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="75sp"
                    android:background="@drawable/plaintextdesign"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textSize="14dp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edTipoIVAREC"
                    android:layout_width="104dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="43sp"
                    android:background="@drawable/plaintextdesign"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:layout_marginTop="30sp"
                    android:focusableInTouchMode="false"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80sp"
                        android:layout_marginBottom="10sp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="Precio coste"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#000000"
                        android:textSize="15sp"></TextView>

                    <EditText
                        android:id="@+id/edPrecioCoste"
                        android:layout_width="105dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="75sp"
                        android:background="@drawable/plaintextdesign"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:textSize="14dp"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20sp"
                            android:layout_marginBottom="10sp"
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="Ult. Compra"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/edUltCompra"
                            android:layout_width="105dp"
                            android:layout_height="33dp"
                            android:layout_marginStart="20sp"
                            android:background="@drawable/plaintextdesign"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textSize="14dp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80sp"
                        android:layout_marginBottom="10sp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="Envase"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#000000"
                        android:textSize="15sp"></TextView>

                    <EditText
                        android:id="@+id/edEnvase"
                        android:layout_width="146dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="75sp"
                        android:background="@drawable/plaintextdesign"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:textSize="14dp"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                    </LinearLayout>

                </LinearLayout>

                <CheckBox
                    android:id="@+id/checkPorlotes"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="20sp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="Por lotes" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80sp"
                        android:layout_marginBottom="10sp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                            android:text="Stock C/P"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#000000"
                        android:textSize="15sp"></TextView>

                    <EditText
                        android:id="@+id/edStockCP"
                        android:layout_width="105dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="75sp"
                        android:background="@drawable/plaintextdesign"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:textSize="14dp"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20sp"
                            android:layout_marginBottom="10sp"
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="Stock U/K"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/edStockUK"
                            android:layout_width="105dp"
                            android:layout_height="33dp"
                            android:layout_marginStart="20sp"
                            android:background="@drawable/plaintextdesign"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textSize="14dp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="405dp"
                android:layout_height="98dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:background="@drawable/card"
                android:orientation="vertical">

                <TextView
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="95sp"
                    android:layout_marginBottom="10sp"
                    android:text="Impuestos especiales"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15sp"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="92dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25sp"
                            android:layout_marginBottom="10sp"
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="Punto verde"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000000"
                            android:textSize="15sp">

                        </TextView>

                        <EditText
                            android:id="@+id/edPuntoVerde"
                            android:layout_width="100dp"
                            android:layout_height="33dp"
                            android:layout_marginStart="20sp"
                            android:background="@drawable/plaintextdesign"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textSize="14dp"></EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25sp"
                            android:layout_marginBottom="10sp"
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="Alcohol"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000000"
                            android:textSize="15sp">

                        </TextView>

                        <EditText
                            android:id="@+id/edAlcohol"
                            android:layout_width="100dp"
                            android:layout_height="33dp"
                            android:layout_marginStart="20sp"
                            android:background="@drawable/plaintextdesign"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textSize="14dp"></EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="102dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25sp"
                            android:layout_marginBottom="10sp"
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="Manipulación"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000000"
                            android:textSize="15sp">

                        </TextView>

                        <EditText
                            android:id="@+id/edManipulacion"
                            android:layout_width="100dp"
                            android:layout_height="33dp"
                            android:layout_marginStart="20sp"
                            android:layout_marginEnd="20sp"
                            android:background="@drawable/plaintextdesign"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textSize="14dp"></EditText>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>