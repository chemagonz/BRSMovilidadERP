<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.BRSMovilidadERPprueba"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/imageArticulo"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/separador22"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="0"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="10sp"
                android:background="@color/colorAdvantysApp3"
                android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0"
            android:paddingLeft="6dp"
            android:paddingRight="5dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCodigoCliente"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40sp"
                    android:layout_marginBottom="10sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="Código"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/customOutlineText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="35dp">

                    <EditText
                        android:id="@+id/edCodigoArticulo"
                        android:layout_width="100dp"
                        android:layout_height="46dp"
                        android:layout_marginRight="5sp"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:layout_marginBottom="10dp"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:textSize="18dp"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginEnd="35sp">

                <TextView
                    android:id="@+id/txtFCarticulos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_marginRight="10dp"
                    android:focusableInTouchMode="false"
                    android:text="F.C"
                    android:textColor="#000000"
                    android:textSize="15sp"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/customOutlineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginStart="185dp">

                <EditText
                    android:id="@+id/edFCarticulo"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textSize="18dp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:paddingStart="45sp"
                android:text="Nombre"
                android:textColor="@color/black"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/customOutlineText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp">

            <EditText
                android:id="@+id/edNombreArticulo"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginEnd="40dp"
                android:cursorVisible="false"
                android:focusable="false"
                android:layout_marginBottom="10dp"
                android:focusableInTouchMode="false"
                android:textAlignment="center"
                android:textSize="18dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:paddingStart="45sp"
                android:text="Nombre corto"
                android:textColor="@color/black"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/customOutlineText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp">

            <EditText
                android:id="@+id/edNombreCortoArticulo"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginEnd="40dp"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textAlignment="center"
                android:textSize="18dp"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/separador2"
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:layout_weight="0"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="10sp"
            android:background="@color/colorAdvantysApp3"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:paddingStart="45sp"
                        android:text="Tipo I.V.A"
                        android:textColor="@color/black"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/customOutlineText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40dp">

                        <EditText
                            android:id="@+id/edTipoIVA"
                            android:layout_width="104dp"
                            android:layout_height="46dp"
                            android:layout_marginRight="5sp"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textSize="18dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="35sp">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/customOutlineText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30sp"
                        android:layout_gravity="right">

                    <EditText
                        android:id="@+id/edTipoIVAREC"
                        android:layout_width="104dp"
                        android:layout_height="46dp"
                        android:layout_marginRight="5sp"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:textSize="18dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:paddingStart="45sp"
                        android:text="Precio coste"
                        android:textColor="@color/black"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/customOutlineText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40dp">

                    <EditText
                        android:id="@+id/edPrecioCoste"
                        android:layout_width="104dp"
                        android:layout_height="46dp"
                        android:layout_marginRight="5sp"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:textSize="18dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="35dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="125sp"
                            android:layout_marginBottom="10sp"
                            android:layout_gravity="right"
                            android:layout_marginEnd="20dp"
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="Últ. Compra"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/customOutlineText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right">

                        <EditText
                            android:id="@+id/edUltCompra"
                            android:layout_width="104dp"
                            android:layout_height="46dp"
                            android:layout_marginRight="5sp"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textSize="18dp"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:paddingStart="45sp"
                        android:text="Envase"
                        android:textColor="@color/black"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/customOutlineText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40dp">

                        <EditText
                            android:id="@+id/edEnvase"
                            android:layout_width="146dp"
                            android:layout_height="46dp"
                            android:layout_marginRight="5sp"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textSize="18dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginStart="60dp">

                    <CheckBox
                        android:id="@+id/checkPorlotes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="20sp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:text="Por lotes" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:paddingStart="45sp"
                        android:text="Stock C/P"
                        android:textColor="@color/black"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/customOutlineText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40dp">

                    <EditText
                        android:id="@+id/edStockCP"
                        android:layout_width="146dp"
                        android:layout_height="46dp"
                        android:layout_marginRight="5sp"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:textSize="18dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="35dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10sp"
                            android:layout_gravity="right"
                            android:layout_marginEnd="35dp"
                            android:paddingStart="45sp"
                            android:text="Stock U/K"
                            android:textColor="@color/black"/>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/customOutlineText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right">

                        <EditText
                            android:id="@+id/edStockUK"
                            android:layout_width="104dp"
                            android:layout_height="46dp"
                            android:layout_marginRight="5sp"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textSize="18dp"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="20sp"
                android:background="@drawable/card"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_marginBottom="10sp"
                    android:text="Impuestos especiales"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10sp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="89dp"
                        android:layout_marginStart="5sp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10sp"
                            android:paddingStart="15sp"
                            android:text="Punto verde"
                            android:textColor="@color/black"/>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/customOutlineText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/edPuntoVerde"
                                android:layout_width="100dp"
                                android:layout_height="46dp"
                                android:layout_marginRight="5sp"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:inputType="text"
                                android:textAlignment="center"
                                android:textSize="18dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="89dp"
                        android:layout_marginStart="15sp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10sp"
                            android:paddingStart="15sp"
                            android:text="Alcohol"
                            android:textColor="@color/black"/>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/customOutlineText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/edAlcohol"
                            android:layout_width="100dp"
                            android:layout_height="46dp"
                            android:layout_marginRight="5sp"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textSize="18dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="89dp"
                        android:layout_marginStart="15sp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10sp"
                            android:paddingStart="5sp"
                            android:text="Manipulación"
                            android:textColor="@color/black"/>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/customOutlineText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/edManipulacion"
                            android:layout_width="100dp"
                            android:layout_height="46dp"
                            android:layout_marginRight="5sp"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textSize="18dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

         </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TARIFAS"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRECIO C/P"
                android:layout_marginStart="150sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRECIO U/K"
                android:textStyle="bold"
                android:layout_marginStart="20sp"
                android:textColor="@color/black"
                android:textAlignment="center"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C5C5C5"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTarifaArticulos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</ScrollView>