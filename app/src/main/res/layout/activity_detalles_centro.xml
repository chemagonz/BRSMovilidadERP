<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    android:theme="@style/Theme.BRSMovilidadERPprueba"
    android:orientation="vertical"
   >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="0"
            android:paddingLeft="6dp"
            android:paddingRight="5dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="35sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCodigoCentro"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_marginBottom="10sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="Código"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000"
                    android:textSize="15sp">

                </TextView>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/customOutlineText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/edCodigoCentro"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginRight="5sp"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:textSize="18dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="35sp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtNIFCentros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:paddingLeft="30dp"
                    android:text="N.I.F"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textSize="15sp">

                </TextView>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/customOutlineText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/edNIFCentros"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:textSize="18dp"></EditText>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="#000000"
                android:layout_marginBottom="10sp"
                android:paddingStart="47sp"
                android:textSize="15sp">

            </TextView>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/customOutlineText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="40sp">

                <EditText
                    android:id="@+id/edNombreCentro"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:layout_marginStart="40sp"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textAlignment="center"
                    android:textSize="18dp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/separador4"
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="@color/colorAdvantysApp3"
            android:orientation="vertical" >

        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:paddingStart="47sp"
                android:text="Dirección"
                android:textColor="#000000"
                android:textSize="15sp">

            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/customOutlineText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="40sp">
            <EditText
                android:id="@+id/edCalleCPMunicProvin"
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:layout_weight="1"
                android:layout_marginStart="40sp"
                android:inputType="textMultiLine"
                android:textAlignment="center"
                android:maxLines="5"
                android:minLines="3"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:scrollbars="vertical"
                android:textSize="18dp"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/separador2"
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:layout_weight="0"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="10sp"
           android:background="@color/colorAdvantysApp3"
            android:orientation="vertical" >

        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="47sp"
                android:layout_marginBottom="10sp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="Teléfono"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="15sp">

            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/customOutlineText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="40sp">
            <EditText
                android:id="@+id/edTelefonoCentro"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:layout_marginStart="40sp"
                android:inputType="text"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:textAlignment="center"
                android:textSize="18dp">
            </EditText>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/separador1"
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:layout_weight="0"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="15sp"
            android:background="@color/colorAdvantysApp3"
            android:orientation="vertical" >

        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="47sp"
                android:layout_marginBottom="10sp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="Series"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="15sp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/customOutlineText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="40sp">
                <EditText
                    android:id="@+id/edSerieCentro"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:layout_marginStart="40sp"
                    android:inputType="text"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:cursorVisible="false"
                    android:textAlignment="center"
                    android:textSize="18dp">
                </EditText>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/separador"
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:layout_weight="0"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="15sp"
            android:background="@color/colorAdvantysApp3"
            android:orientation="vertical" >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20sp"
            android:layout_weight="0"
            android:paddingLeft="6dp"
            android:paddingRight="5dp"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="70sp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkAplicaCargo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:layout_gravity="center"
                    android:enabled="false"
                    android:layout_weight="1"
                    android:text="Aplica cargo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtVentaMenorA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_marginBottom="10sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:paddingLeft="30dp"
                    android:text="Venta menor a"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textSize="15sp">

                </TextView>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/customOutlineText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="40sp">

                    <EditText
                        android:id="@+id/edVentaMenorA"
                        android:layout_width="107dp"
                        android:layout_height="46dp"
                        android:layout_marginStart="30sp"
                        android:layout_marginRight="12sp"
                        android:layout_weight="1"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:textSize="18dp"></EditText>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
</LinearLayout>