<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preventa"
            android:textColor="#000000"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/customOutlineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:boxBackgroundColor="@color/colorAdvantysApp6">

            <EditText
                android:id="@+id/edCambioPreventa"
                android:layout_width="165dp"
                android:layout_height="42dp"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:inputType="date"
                android:maxLength="28"
                android:paddingTop="0dp"
                android:paddingBottom="1dp"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Servicio diurno"
            android:textColor="#000000"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/customOutlineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:boxBackgroundColor="@color/colorAdvantysApp6">
        <EditText
            android:id="@+id/edCambioServicioDiurno"
            android:layout_width="170dp"
            android:layout_height="42dp"
            android:focusable="false"
            android:ems="10"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:inputType="date"
            android:maxLength="13"
            android:paddingBottom="1dp"
            android:paddingTop="0dp"
            android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/f_cambiofecID_lb_serviciotarde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Servicio tarde"
            android:textColor="#000000"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/customOutlineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:boxBackgroundColor="@color/colorAdvantysApp6">
        <EditText
            android:id="@+id/edCambioServicioTarde"
            android:layout_width="170dp"
            android:layout_height="42dp"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:inputType="date"
            android:maxLength="13"
            android:paddingBottom="1dp"
            android:paddingTop="0dp"
            android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Servicio nocturno"
            android:textColor="#000000"
            android:textSize="20sp" />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/customOutlineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:boxBackgroundColor="@color/colorAdvantysApp6">
        <EditText
            android:id="@+id/edCambioServicionoctur"
            android:layout_width="170dp"
            android:layout_height="42dp"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:inputType="date"
            android:maxLength="13"
            android:paddingBottom="1dp"
            android:paddingTop="0dp"
            android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

</LinearLayout>
