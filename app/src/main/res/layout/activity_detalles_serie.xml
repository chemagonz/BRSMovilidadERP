<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">



        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eaeaea"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="411dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="0"
                android:paddingLeft="6dp"
                android:paddingRight="5dp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="83dp"
                    android:layout_height="69dp"
                    android:layout_marginStart="70sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtCodigoSerie"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5sp"
                        android:layout_marginBottom="10sp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="Codigo"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#000000"
                        android:textSize="15sp">

                    </TextView>

                    <EditText
                        android:id="@+id/edCodigoSerie"
                        android:layout_width="65dp"
                        android:layout_height="33dp"
                        android:background="@drawable/plaintextdesign"
                        android:layout_marginRight="5sp"
                        android:inputType="text"
                        android:hint="COD"
                        android:textAlignment="center"
                        android:textSize="14dp">

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="70sp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/f_seriesdetalleID_lb_aplicaiva"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10sp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:paddingLeft="30dp"
                        android:text="Aplica I.V.A"
                        android:textColor="#000000"
                        android:textSize="15sp">

                    </TextView>

                    <EditText
                        android:id="@+id/edAplicaIVA"
                        android:layout_width="52dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="17sp"
                        android:background="@drawable/plaintextdesign"
                        android:inputType="text"
                        android:hint="S/N"
                        android:textAlignment="center"
                        android:textSize="14dp"></EditText>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="411dp"
                android:layout_height="65dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textColor="#000000"
                    android:layout_marginBottom="10sp"
                    android:paddingStart="85sp">

                </TextView>

                <EditText
                    android:id="@+id/edNombreSerie"
                    android:layout_width="250dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="75sp"
                    android:hint="NOMBRE"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:background="@drawable/plaintextdesign">

                </EditText>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/separador4"
                android:layout_width="280dp"
                android:layout_height="2dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="@color/teal"
                android:orientation="vertical" >

            </LinearLayout>

            <LinearLayout
                android:layout_width="411dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:paddingStart="85sp"
                    android:text="Ultimo pedido"
                    android:textColor="#000000">

                </TextView>

                <EditText
                    android:id="@+id/edUltPedido"
                    android:layout_width="250dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="75sp"
                    android:layout_marginBottom="10sp"
                    android:hint="ULT.PEDIDO"
                    android:textSize="14dp"
                    android:textAlignment="center"
                    android:background="@drawable/plaintextdesign">

                </EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:paddingStart="85sp"
                    android:text="Ultimo albaran"
                    android:textColor="#000000">

                </TextView>

                <EditText
                    android:id="@+id/edUltAlbaran"
                    android:layout_width="250dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="75sp"
                    android:layout_marginBottom="10sp"
                    android:hint="ULT.ALBARAN"
                    android:textSize="14dp"
                    android:textAlignment="center"
                    android:background="@drawable/plaintextdesign">

                </EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:paddingStart="85sp"
                    android:text="Ultima factura"
                    android:textColor="#000000">

                </TextView>

                <EditText
                    android:id="@+id/edUltFactura"
                    android:layout_width="250dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="75sp"
                    android:hint="ULT.FACTURA"
                    android:textSize="14dp"
                    android:textAlignment="center"
                    android:background="@drawable/plaintextdesign">

                </EditText>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/separador2"
                android:layout_width="280dp"
                android:layout_height="2dp"
                android:layout_weight="0"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="10sp"
                android:background="@color/teal"
                android:orientation="vertical" >

            </LinearLayout>

            <LinearLayout
                android:layout_width="411dp"
                android:layout_height="69dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80sp"
                    android:layout_marginBottom="10sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="Centro"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000"
                    android:textSize="15sp">

                </TextView>

                <EditText
                    android:id="@+id/edCentroSerie"
                    android:layout_width="65dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="75sp"
                    android:background="@drawable/plaintextdesign"
                    android:inputType="text"
                    android:hint="CENTRO"
                    android:textAlignment="center"
                    android:textSize="14dp">

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="411dp"
                android:layout_height="69dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="75sp"
                    android:layout_marginBottom="10sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="Art. Servicio"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000"
                    android:textSize="15sp">

                </TextView>

                <EditText
                    android:id="@+id/edArtServicioSerie"
                    android:layout_width="249dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="75sp"
                    android:background="@drawable/plaintextdesign"
                    android:inputType="text"
                    android:hint="ART.SERVICIO/FAB"
                    android:textAlignment="center"
                    android:textSize="14dp">

                </EditText>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
