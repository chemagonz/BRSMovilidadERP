<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LayoutBuscarClientes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    card_view:cardUseCompatPadding="true">

    <!-- LinearLayout vertical para nombreCliente y codigoCliente -->
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView
                android:id="@+id/nombreCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/codigoCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
            <View
                android:id="@+id/separador4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#C8C8C8" />
        </LinearLayout>

            <!-- ImageButton a la derecha -->
        <ImageButton
        android:id="@+id/botonDetalles"
        android:layout_width="60dp"
        android:layout_height="match_parent"
            android:layout_marginStart="275sp"
        android:background="#00000000"
        app:srcCompat="@drawable/ic_action_name"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="24dp" />

            <!-- Separador -->

</LinearLayout>

