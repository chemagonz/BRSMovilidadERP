<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    tools:context=".UI.Views.BuscarArticulos.FiltrarArticulos_Activity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="#FFFFFF"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtFamilia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:textAlignment="center"
                        android:hint="Familia"
                        style="@style/CustomTextInputLayout">

                        <AutoCompleteTextView
                            android:id="@+id/autocompleteFamilia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/plaintextdesign"
                            android:inputType="none"
                            android:focusable="false"
                            android:cursorVisible="false">
                        </AutoCompleteTextView>

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout05"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:hint="Subfamilia"
                        style="@style/CustomTextInputLayout">

                        <AutoCompleteTextView
                            android:id="@+id/autocompleteSubfamilia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/plaintextdesign"
                            android:dropDownHorizontalOffset="8dp"
                            android:inputType="none"
                            android:focusable="false"
                            android:cursorVisible="false">
                        </AutoCompleteTextView>

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout04"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        style="@style/CustomTextInputLayout">

                        <AutoCompleteTextView
                            android:id="@+id/autocompleteFormato"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/CustomTextInputLayout"
                            android:hint="Formato"
                            android:padding="0dp"
                            android:inputType="none"
                            android:focusable="false"
                            android:cursorVisible="false">
                        </AutoCompleteTextView>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout03"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:hint="Marca"
                        style="@style/CustomTextInputLayout">

                        <AutoCompleteTextView
                            android:id="@+id/autocompleteMarca"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/plaintextdesign"
                            android:inputType="none"
                            android:focusable="false"
                            android:cursorVisible="false">
                        </AutoCompleteTextView>

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:hint="Sabor"
                            style="@style/CustomTextInputLayout">

                            <AutoCompleteTextView
                                android:id="@+id/autocompleteSabor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/plaintextdesign"
                                android:inputType="none"
                                android:focusable="false"
                                android:cursorVisible="false">
                            </AutoCompleteTextView>

                        </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>